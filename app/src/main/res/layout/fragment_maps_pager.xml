<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="com.mobile.udem.ui.fragmets.MapsPagerFragment">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/location_image"
        android:layout_width="110dp"
        android:layout_margin="10dp"
        android:layout_height="110dp"
        fresco:placeholderImage="@drawable/placeholder_picture"
        fresco:placeholderImageScaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/location_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Dubai's Night"/>
        <TextView
            android:id="@+id/location_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="New york 2178"/>
    </LinearLayout>

</RelativeLayout>
